{% block flashbag %}

    {% for message in app.flashes('error') %}
        <div class="callout alert">
            <h6 class="text-center">{{ message }}</h6>
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="callout success">
            <h6 class="text-center">{{ message }}</h6>
        </div>
    {% endfor %}

{% endblock flashbag %}